    <script>
        // Simple tooltip system
        window.stationTooltip = {
            el: null,
            timer: null,
            show(sourceEl, text) {
                clearTimeout(this.timer);
                this.el = sourceEl;
                const tooltip = document.getElementById('station-tooltip');
                const rect = sourceEl.getBoundingClientRect();
                tooltip.style.left = rect.left + 'px';
                tooltip.style.top = (rect.bottom + 4) + 'px';
                tooltip.textContent = text;
                this.timer = setTimeout(() => {
                    tooltip.style.display = 'block';
                }, 500);
            },
            hide() {
                clearTimeout(this.timer);
                this.el = null;
                document.getElementById('station-tooltip').style.display = 'none';
            }
        };

        document.addEventListener('mouseover', (e) => {
            if (window.stationTooltip.el && !window.stationTooltip.el.contains(e.target)) {
                window.stationTooltip.hide();
            }
        });

        // Timezone utilities
        window.tzUtils = {
            // Get user's timezone abbreviation (e.g., "PST", "EST")
            getLocalTzAbbrev: function() {
                try {
                    return new Date().toLocaleTimeString('en-US', { timeZoneName: 'short' }).split(' ').pop();
                } catch (e) {
                    return 'Local';
                }
            },

            // Check if UTC mode is enabled
            isUTC: function() {
                return localStorage.getItem('webcaltides_tz') === 'utc';
            },

            // Set timezone preference
            setUTC: function(useUTC) {
                localStorage.setItem('webcaltides_tz', useUTC ? 'utc' : 'local');
                // Dispatch event for components to react
                window.dispatchEvent(new CustomEvent('tz-changed', { detail: { useUTC: useUTC } }));
            },

            // Format ISO timestamp to HH:MM TZ in preferred timezone
            formatTime: function(isoString) {
                var date = new Date(isoString);
                var options = { hour: '2-digit', minute: '2-digit', hour12: false, timeZoneName: 'short' };
                if (this.isUTC()) {
                    options.timeZone = 'UTC';
                }
                // Returns "21:15 PST" or "05:48 UTC"
                return date.toLocaleTimeString('en-US', options);
            }
        };

        // Alpine.js timezone toggle component
        function timezoneToggle() {
            return {
                useUTC: window.tzUtils.isUTC(),
                tzAbbrev: window.tzUtils.getLocalTzAbbrev(),
                toggle: function() {
                    this.useUTC = !this.useUTC;
                    window.tzUtils.setUTC(this.useUTC);
                }
            };
        }

        // Units utilities
        window.unitUtils = {
            isMetric: function() {
                return localStorage.getItem('webcaltides_units') === 'metric';
            },
            setMetric: function(useMetric) {
                localStorage.setItem('webcaltides_units', useMetric ? 'metric' : 'imperial');
                window.dispatchEvent(new CustomEvent('units-changed', { detail: { metric: useMetric } }));
            },
            getUnits: function() {
                return this.isMetric() ? 'metric' : 'imperial';
            },
            getDistanceUnit: function() {
                return this.isMetric() ? 'km' : 'mi';
            },
            getDepthUnit: function() {
                return this.isMetric() ? 'm' : 'ft';
            }
        };

        // Alpine.js units toggle component
        function unitsToggle() {
            return {
                metric: window.unitUtils.isMetric(),
                toggle: function() {
                    this.metric = !this.metric;
                    window.unitUtils.setMetric(this.metric);
                }
            };
        }

        // Alpine.js search form component factory
        function searchForm(config) {
            return {
                query: '',
                results: [],
                showResults: false,
                selectedIndex: -1,
                loading: false,
                debounceTimer: null,
                submitRef: config.submitRef || 'submitBtn',

                async search() {
                    if (this.query.length < 2) {
                        this.results = [];
                        this.showResults = false;
                        return;
                    }
                    this.loading = true;
                    try {
                        const response = await fetch('/api/stations/autocomplete?q=' + encodeURIComponent(this.query));
                        const data = await response.json();
                        this.results = data.results;
                        this.showResults = this.results.length > 0;
                        this.selectedIndex = -1;
                    } catch (e) {
                        console.error('Autocomplete error:', e);
                    }
                    this.loading = false;
                },

                debounceSearch() {
                    clearTimeout(this.debounceTimer);
                    this.debounceTimer = setTimeout(() => this.search(), 150);
                },

                selectResult(result) {
                    this.query = result.name;
                    this.showResults = false;
                    this.$nextTick(() => this.$refs[this.submitRef].click());
                },

                handleKeydown(e) {
                    if (!this.showResults) return;
                    if (e.key === 'ArrowDown') {
                        e.preventDefault();
                        this.selectedIndex = Math.min(this.selectedIndex + 1, this.results.length - 1);
                    } else if (e.key === 'ArrowUp') {
                        e.preventDefault();
                        this.selectedIndex = Math.max(this.selectedIndex - 1, -1);
                    } else if (e.key === 'Enter' && this.selectedIndex >= 0) {
                        e.preventDefault();
                        this.selectResult(this.results[this.selectedIndex]);
                    } else if (e.key === 'Escape') {
                        this.showResults = false;
                    }
                }
            };
        }

        // Alpine.js station card component factory
        function stationCard(config) {
            return {
                solar: true,
                lunar: false,
                mapLoaded: false,
                copied: false,
                swipeX: 0,
                swiping: false,
                startX: 0,
                selectedSource: config.selectedSource,
                selectedDepth: config.sources[0]?.depth || null,
                sources: config.sources,
                webcalBase: config.webcalBase,
                httpsBase: config.httpsBase,
                units: window.unitUtils.getUnits(),
                stationType: config.stationType,

                init() {
                    window.addEventListener('units-changed', () => {
                        this.units = window.unitUtils.getUnits();
                    });
                    // Initialize selectedDepth from the initial source
                    const initialSource = this.sources.find(s => s.id === this.selectedSource);
                    if (initialSource) {
                        this.selectedDepth = initialSource.depth;
                    }
                },

                get currentSource() {
                    return this.sources.find(s => s.id === this.selectedSource) || this.sources[0];
                },

                getWebcalUrl() {
                    return this.webcalBase + this.selectedSource + '.ics?units=' + this.units +
                           (!this.solar ? '&solar=0' : '') + (this.lunar ? '&lunar=1' : '');
                },

                getHttpsUrl() {
                    return this.httpsBase + this.selectedSource + '.ics?units=' + this.units +
                           (!this.solar ? '&solar=0' : '') + (this.lunar ? '&lunar=1' : '');
                },

                loadNextEvents() {
                    const preview = this.$el.querySelector('.data-preview-content');
                    if (!preview) return;

                    fetch('/api/stations/' + this.stationType + '/' + encodeURIComponent(this.selectedSource) + '/next')
                        .then(res => res.json())
                        .then(data => {
                            if (data.error || !data.events || data.events.length === 0) {
                                preview.querySelectorAll('.data-time').forEach(el => { el.textContent = 'N/A'; });
                                return;
                            }

                            if (this.stationType === 'tides') {
                                this.updateTidePreview(data, preview);
                            } else {
                                this.updateCurrentPreview(data, preview);
                            }
                        })
                        .catch(err => {
                            console.error('Failed to load station data:', err);
                            preview.querySelectorAll('.data-time').forEach(el => { el.textContent = 'N/A'; });
                        });
                },

                updateTidePreview(data, preview) {
                    data.events.forEach((event, index) => {
                        const slotClass = index === 0 ? '.data-tide-1' : '.data-tide-2';
                        const slot = preview.querySelector(slotClass);
                        if (!slot) return;
                        const labelEl = slot.querySelector('.data-label');
                        const timeEl = slot.querySelector('.data-time');
                        const highIcon = slot.querySelector('.data-icon-high');
                        const lowIcon = slot.querySelector('.data-icon-low');
                        if (labelEl) labelEl.textContent = event.type;
                        if (timeEl) {
                            timeEl.dataset.isoTime = event.time;
                            timeEl.textContent = '@ ' + window.tzUtils.formatTime(event.time);
                        }
                        if (event.type === 'High') {
                            if (highIcon) highIcon.classList.remove('hidden');
                            if (lowIcon) lowIcon.classList.add('hidden');
                        } else {
                            if (highIcon) highIcon.classList.add('hidden');
                            if (lowIcon) lowIcon.classList.remove('hidden');
                        }
                    });
                },

                updateCurrentPreview(data, preview) {
                    let hasSlack = false;
                    let nextMaxCurrent = null;
                    data.events.forEach(event => {
                        if (event.type === 'Slack') {
                            hasSlack = true;
                            const slackEl = preview.querySelector('.data-slack .data-time');
                            if (slackEl) {
                                slackEl.dataset.isoTime = event.time;
                                slackEl.textContent = '@ ' + window.tzUtils.formatTime(event.time);
                            }
                        } else if ((event.type === 'Flood' || event.type === 'Ebb') && !nextMaxCurrent) {
                            nextMaxCurrent = event;
                        }
                    });
                    if (nextMaxCurrent) {
                        const maxEl = preview.querySelector('.data-max-current');
                        if (maxEl) {
                            const labelEl = maxEl.querySelector('.data-label');
                            const timeEl = maxEl.querySelector('.data-time');
                            if (labelEl) labelEl.textContent = nextMaxCurrent.type;
                            if (timeEl) {
                                timeEl.dataset.isoTime = nextMaxCurrent.time;
                                timeEl.textContent = '@ ' + window.tzUtils.formatTime(nextMaxCurrent.time);
                            }
                        }
                    } else {
                        const maxTimeEl = preview.querySelector('.data-max-current .data-time');
                        if (maxTimeEl) maxTimeEl.textContent = 'N/A';
                    }
                    if (!hasSlack) {
                        const slackEl = preview.querySelector('.data-slack .data-time');
                        if (slackEl) slackEl.textContent = 'N/A';
                    }
                },

                handleTouchStart(e) { this.startX = e.touches[0].clientX; this.swiping = true; },
                handleTouchMove(e) {
                    if (!this.swiping) return;
                    const diff = this.startX - e.touches[0].clientX;
                    this.swipeX = Math.max(0, Math.min(120, diff));
                },
                handleTouchEnd() { this.swiping = false; this.swipeX = this.swipeX > 60 ? 120 : 0; },
                resetSwipe() { this.swipeX = 0; },
                copyUrl(url) {
                    navigator.clipboard.writeText(url);
                    this.copied = true;
                    setTimeout(() => this.copied = false, 1500);
                }
            };
        }
    </script>

    <style>
        [x-cloak] { display: none !important; }

        body {
            font-family: 'Figtree', system-ui, sans-serif;
        }

        /* Animated wave pattern for hero */
        .wave-bg {
            position: absolute;
            inset: 0;
            overflow: hidden;
            z-index: 0;
        }

        .wave {
            position: absolute;
            bottom: -5%;
            left: -20%;
            width: 140%;
            height: 60%;
            background: linear-gradient(180deg, transparent 0%, rgba(14, 165, 233, 0.08) 100%);
            border-radius: 45% 48% 43% 47%;
            animation: wave-travel 20s ease-in-out infinite;
        }

        .wave:nth-child(2) {
            bottom: -8%;
            height: 55%;
            background: linear-gradient(180deg, transparent 0%, rgba(14, 165, 233, 0.05) 100%);
            border-radius: 47% 44% 48% 43%;
            animation: wave-travel-reverse 24s ease-in-out infinite;
            animation-delay: -4s;
        }

        .wave:nth-child(3) {
            bottom: -12%;
            height: 50%;
            background: linear-gradient(180deg, transparent 0%, rgba(14, 165, 233, 0.03) 100%);
            border-radius: 43% 47% 45% 48%;
            animation: wave-travel 28s ease-in-out infinite;
            animation-delay: -8s;
        }

        @keyframes wave-travel {
            0% { transform: translateX(-5%) translateY(0) rotate(0deg); }
            25% { transform: translateX(3%) translateY(-10px) rotate(0.5deg); }
            50% { transform: translateX(8%) translateY(-5px) rotate(0deg); }
            75% { transform: translateX(3%) translateY(-12px) rotate(-0.5deg); }
            100% { transform: translateX(-5%) translateY(0) rotate(0deg); }
        }

        @keyframes wave-travel-reverse {
            0% { transform: translateX(5%) translateY(0) rotate(0deg); }
            25% { transform: translateX(-2%) translateY(-8px) rotate(-0.5deg); }
            50% { transform: translateX(-8%) translateY(-5px) rotate(0deg); }
            75% { transform: translateX(-2%) translateY(-10px) rotate(0.5deg); }
            100% { transform: translateX(5%) translateY(0) rotate(0deg); }
        }

        /* Subtle grain texture overlay */
        .grain-overlay {
            position: fixed;
            inset: 0;
            pointer-events: none;
            opacity: 0.03;
            z-index: 9999;
            background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
        }

        /* Search input styling */
        .search-input {
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .search-input:focus {
            box-shadow: 0 0 0 3px rgba(14, 165, 233, 0.2), 0 8px 32px rgba(0, 0, 0, 0.12);
        }

        /* Card hover effects */
        .station-card {
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .station-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 20px 40px rgba(15, 23, 42, 0.15);
        }

        /* Smooth fade-in animation for results */
        @keyframes fade-up {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-fade-up {
            animation: fade-up 0.5s ease-out forwards;
        }

        .animation-delay-100 { animation-delay: 0.1s; }
        .animation-delay-200 { animation-delay: 0.2s; }
        .animation-delay-300 { animation-delay: 0.3s; }

        /* Staggered card entrance - cards start invisible */
        .station-card {
            opacity: 0;
            animation: fade-up 0.4s ease-out forwards;
        }

        /* Swipeable card container */
        .swipe-container {
            position: relative;
            overflow: hidden;
        }

        .swipe-content {
            position: relative;
            z-index: 2;
            transition: transform 0.3s ease-out;
            background: rgb(30, 41, 59); /* navy-800 solid to hide swipe action */
            border-radius: inherit;
        }

        .swipe-content.swiping {
            transition: none;
        }

        .swipe-action {
            position: absolute;
            top: 0;
            right: 0;
            bottom: 0;
            width: 120px;
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 1;
        }

        .swipe-action-btn {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 4px;
            color: white;
            font-size: 12px;
            font-weight: 500;
        }

        /* Copy success animation */
        @keyframes copy-success {
            0% { transform: scale(1); }
            50% { transform: scale(1.2); }
            100% { transform: scale(1); }
        }

        .copy-success {
            animation: copy-success 0.3s ease-out;
        }

        /* Button press effect */
        .btn-press:active {
            transform: scale(0.95);
        }

        /* Glow effect on subscribe button */
        .btn-glow {
            position: relative;
        }

        .btn-glow::before {
            content: '';
            position: absolute;
            inset: -2px;
            background: linear-gradient(45deg, #0ea5e9, #2dd4bf, #0ea5e9);
            border-radius: inherit;
            opacity: 0;
            z-index: -1;
            transition: opacity 0.3s;
            filter: blur(8px);
        }

        .btn-glow:hover::before {
            opacity: 0.5;
        }

        /* Reduced motion preference */
        @media (prefers-reduced-motion: reduce) {
            .station-card,
            .animate-fade-up,
            .wave {
                animation: none;
                opacity: 1;
                transform: none;
            }
            .station-card:hover {
                transform: none;
            }
        }

        /* Provider badge pulse for warnings */
        .badge-warning {
            animation: subtle-pulse 3s ease-in-out infinite;
        }

        @keyframes subtle-pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.8; }
        }

        /* Compass icon spin on hover */
        .compass-icon {
            transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .search-wrapper:focus-within .compass-icon {
            transform: rotate(45deg);
        }

        /* Button ripple effect */
        .btn-primary {
            position: relative;
            overflow: hidden;
        }

        .btn-primary::after {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transform: translateX(-100%);
            transition: transform 0.6s;
        }

        .btn-primary:hover::after {
            transform: translateX(100%);
        }

        /* Sticky search on scroll - hidden until scrolled past hero */
        .search-sticky {
            position: sticky;
            top: 0;
            z-index: 100;
            transition: all 0.3s;
            opacity: 0;
            pointer-events: none;
            transform: translateY(-100%);
        }

        .search-sticky.scrolled {
            opacity: 1;
            pointer-events: auto;
            transform: translateY(0);
            background: rgba(15, 23, 42, 0.95);
            backdrop-filter: blur(12px);
            padding: 1rem 0;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
        }
    </style>
</head>

