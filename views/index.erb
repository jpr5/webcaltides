
<form action="/" accept-charset="UTF-8" method="POST" class="w-100">
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        var search = document.getElementById('searchtext');
        if (search) {
          search.focus();

          // Retain prior search value if ^E or RightArrow
          search.addEventListener('keydown', function(e) {
            if ((e.ctrlKey && e.key === 'e') || e.key === 'ArrowRight') {
              // Only convert if cursor is at the start of the input and theres no text
              if ((this.selectionStart === 0 && this.selectionEnd === 0 && !this.value) ||
                  (e.key === 'ArrowRight' && this.selectionStart === 0 && this.selectionEnd === 0)) {
                e.preventDefault();
                if (this.placeholder && this.placeholder !== 'Station...') {
                  this.value = this.placeholder;
                  this.selectionStart = this.selectionEnd = this.value.length; // Move cursor to end
                }
              }
            }
          });
        }
      });
    </script>
    <div class="d-flex align-items-center justify-content-between mb-2">
        <h3 class="mb-0">Station Search</h3>
        <em class="text-end" style="max-width: 60%; font-size: 0.97em;">
            <b>Use double quotes for multi-word</b>: e.g. "puget sound", "san diego", "san francisco"<br>
            <b>GPS format</b>: decimal 1.23, or degrees 1°2.3, -1'2.3, 1°2.3N or 1'2.3E
        </em>
    </div>
    <div class="input-group">
        <span class="input-group-text" id="searchtext_prompt">Keyword or GPS:</span>
        <input type="text" class="form-control" name="searchtext" id="searchtext" value="" placeholder="<%= defined?(placeholder) ? placeholder : 'Station...' %>" />
        <span class="input-group-text" id="searchtext_prompt">Units:</span>
        <select class="form-select" style="flex: 0.3 0.3 auto;" name="units" id="searchunits">
            <option value="imperial" <%= selected='selected' if units == 'imperial'%>>ft/mi</option>
            <option value="metric" <%= selected='selected' if units == 'metric'%>>m/km</option>
        </select>
        <button class="btn btn-primary" type="submit">Search</button>
    </div>
</form>

<%
