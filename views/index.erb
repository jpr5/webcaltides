                        httpsLink.href = newHttps;
                        webcalLink.href = newWebcal;
                            urlInput.value = newWebcal;
                    }
                    solarBox.addEventListener('change', updateUrls);
                })();
                </script>
            </div>
        </div>

    </td>

    <td>

        <div class="btn-group dropdown">
            <a href="#" class="dropdown-toggle" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                radius
